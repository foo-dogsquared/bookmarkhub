header
    .wrapper
        .header-app-titlebox
            a(href="/")
                h3.header-app-name #{app_configuration.app_icon} #{app_configuration.app_name}
        .header-navbar
            if user_session_id
                a(href=app_configuration.logout_page, class="navbar-link") Logout
            else
                a(href=app_configuration.login_page, class="navbar-link") Login
                a(href=app_configuration.signup_page, class="navbar-link") Signup
            a(href=app_configuration.help_page, class="navbar-link") Help
            a(href=app_configuration.about_page, class="navbar-link") About
