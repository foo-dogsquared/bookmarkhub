extends ../layout/default
include auth

block content
    h1 Login
    form(method="post")
        +show_error_list(error)
        .form-input
            p Username
            input(type="text", name="username", required)
        .form-input
            p Password
            input(type="password", name="password", required, minlength="8")
        input(type="submit", value="Login")
